<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100" >

    <RelativeLayout
        android:id="@+id/filebrowser_toolbar_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10" >

        <EditText
            android:id="@+id/filebrowser_search_bar"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:hint="Enter the search term..."
            android:inputType="text" />

        <Button
            android:id="@+id/filebrowser_move_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/filebrowser_search_bar"
            android:text="&lt;" />

        <Button
            android:id="@+id/filebrowser_move_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/filebrowser_move_back"
            android:text=">" />
    </RelativeLayout>

    <ListView
        android:id="@+id/filebrowser_listings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="80"
        android:clickable="true" >
    </ListView>

</LinearLayout>