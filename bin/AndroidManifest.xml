<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.migzing.main"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.migzing.login.LoginMain"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.migzing.login.LoginMain" />

                <category android:name="com.migzing.login.LoginMain" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.migzing.register.RegisterMain"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.migzing.register.RegisterMain" />

                <category android:name="com.migzing.register.RegisterMain" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.migzing.texteditor.NewPost"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.migzing.filebrowser.FileBrowser"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.migzing.filebrowser.FileBrowser" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>